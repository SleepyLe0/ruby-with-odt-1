<div class="h-fit rounded-lg bg-slate-500 flex p-10">
  <%= form_with(model: todo || Todo.new) do |form| %>
    <% if form.object.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
        <ul>
          <% todo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="w-full text-black flex flex-col gap-10">
      <div class="w-full flex flex-col gap-2">
        <%= form.label :title, class: "text-3xl font-semibold" %>
        <%= form.text_field :title, placeholder: "Coding...", class: "text-black" %>
      </div>
      <div class="w-full flex flex-col gap-2">
        <%= form.label :completed, class: "text-2xl font-semibold" %>
        <%= form.select :completed,  [[ "Not Completed", "not_completed" ], [ "Completed", "completed" ]], class: "text-black" %>
      </div>
      <div class="w-full flex gap-5">
        <div class="bg-slate-300 rounded-md p-2">
          <%= link_to "Back to todos", todos_path %>
        </div>
        <div class="bg-green-500 text-white rounded-md p-2">
          <%= form.submit %>
        </div>
      </div>
    </div>
  <% end %>
</div>
