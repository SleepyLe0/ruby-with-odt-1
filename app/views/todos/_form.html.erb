<div class="h-full rounded-lg bg-slate-500 flex justify-center items-center">
  <%= form_with(model: todo) do |form| %>
    <% if todo.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
        <ul>
          <% todo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="w-full text-black">
      <div class="w-full flex flex-col">
        <%= form.label :title, class: "text-3xl" %>
        <%= form.text_area :title, class: "text-black" %>
      </div>
      <div class="w-full">
        <%= form.label :completed, style: "display: block" %>
        <%= form.number_field :completed, class: "text-black" %>
      </div>
      <div class="w-full flex gap-5">
        <div class="bg-slate-300 rounded-md p-2">
          <%= link_to "Back to todos", todos_path %>
        </div>
        <div class="bg-green-500 text-white rounded-md p-2">
          <%= form.submit %>
        </div>
      </div>
    </div>
  <% end %>
</div>
