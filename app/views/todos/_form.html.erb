<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_area :title, class: "text-black" %>
  </div>

  <div>
    <%= form.label :completed, style: "display: block" %>
    <%= form.number_field :completed, class: "text-black" %>
  </div>

  <div class="flex">
    <div>
      <%= form.submit %>
    </div>
    <div>
      <%= link_to "Back to todos", todos_path %>
    </div>
  </div>
<% end %>
