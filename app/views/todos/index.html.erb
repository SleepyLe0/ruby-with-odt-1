<% if notice %>
  <div class="absolute top-5 w-[50rem] p-2 flex justify-center bg-white bg-opacity-50 text-black text-xl rounded-md">
    <%= notice %>
  </div>
<% end %>
<% content_for :title, "Todos" %>
<section class="w-full h-full flex flex-col gap-5">
  <h1 class="text-7xl font-bold">Todos</h1>
  <div class="flex justify-between items-end">
    <%= render "search" %>
    <div class="flex gap-2">
    <div class="bg-white text-slate-900 rounded-md p-2">
      <%= link_to "Users", users_path %>
    </div>
    <div data-controller="modal">
      <button data-action="modal#show" class="bg-white text-slate-900 rounded-md p-2">New Todo</button>
      <div data-modal-target="modal" class="hidden fixed inset-0 bg-gray-800 bg-opacity-75 items-center justify-center" data-action="click->modal#closeOnOutsideClick">
        <div class="bg-white p-6 rounded-lg max-w-md w-full">
          <%= render "form", todo: nil %>
        </div>
      </div>
    </div>
    </div>
  </div>
  <div id="todos" class="h-full rounded-lg bg-slate-500 flex flex-col p-5 gap-5 items-center overflow-y-scroll">
    <% if @todos.empty? %>
      <div class="w-full h-full flex justify-center items-center text-4xl text-slate-900">Empty Task Table</div>
    <% else %>
      <% @todos.each do |todo| %>
        <div class="w-full h-fit bg-slate-700 rounded-md flex p-5 justify-between items-center">
          <%= render todo %>
          <div class="flex gap-2">
            <div data-controller="modal">
              <button data-action="modal#show" class="bg-slate-900 flex rounded-md p-2">Edit</button>
              <div data-modal-target="modal" class="hidden fixed inset-0 bg-gray-800 bg-opacity-75 items-center justify-center" data-action="click->modal#closeOnOutsideClick">
                <div class="bg-white p-6 rounded-lg max-w-md w-full">
                  <%= render "form", todo: todo %>
                </div>
              </div>
            </div>
            <div class="bg-slate-900 flex rounded-md p-2">
              <%= button_to "Delete", todo, method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</section>